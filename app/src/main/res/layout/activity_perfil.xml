<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download"
    android:theme="@style/ThemeOverlay.MyApplication.FullscreenContainer"
    tools:context=".Perfil">


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/Menuperfil"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/menuprofile_background"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/Text_extra"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/perfilcustom_buton01"
                android:text="DETALLS AVANÃ‡ATS"
                android:textAlignment="center"
                android:textColor="#FF14E8F5"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/Horitzontal1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#00FFFFFF"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/perfil_btn01"
                    android:layout_width="110dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/menuperfil_bocs"
                    android:text="date"
                    android:textAlignment="center"
                    android:textColor="#80000000" />

                <Button
                    android:id="@+id/perfil_btn02"
                    android:layout_width="110dp"
                    android:layout_height="85dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/menuperfil_bocs"
                    android:text="time"
                    android:textAlignment="center"
                    android:textColor="#80000000" />

                <Button
                    android:id="@+id/perfil_btn03"
                    android:layout_width="110dp"
                    android:layout_height="85dp"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/menuperfil_bocs"
                    android:text="Class mount"
                    android:textAlignment="center"
                    android:textColor="#80000000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Horitzontal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:background="#00FFFFFF"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/perfil_btn04"
                    android:layout_width="110dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/menuperfil_bocs"
                    android:text="Extra"
                    android:textAlignment="center"
                    android:textColor="#80000000" />

                <Button
                    android:id="@+id/perfil_btn05"
                    android:layout_width="110dp"
                    android:layout_height="85dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/menuperfil_bocs"
                    android:text="Extra"
                    android:textAlignment="center"
                    android:textColor="#80000000" />

                <Button
                    android:id="@+id/perfil_btn06"
                    android:layout_width="110dp"
                    android:layout_height="85dp"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/menuperfil_bocs"
                    android:text="Extra"
                    android:textAlignment="center"
                    android:textColor="#80000000" />
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="161dp"
            android:layout_height="44dp"
            android:layout_marginTop="24dp"
            android:background="#00141414"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/black"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.936"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date"
            android:layout_width="71dp"
            android:layout_height="61dp"
            android:background="@drawable/menuperfil_bocs"
            android:textAlignment="center"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/classamount"
            android:layout_width="59dp"
            android:layout_height="56dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/menuperfil_bocs"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/date"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time"
            android:layout_width="68dp"
            android:layout_height="45dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/menuperfil_bocs"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/classamount"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="268dp"
            android:layout_height="185dp"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/menuprofile_backgroundtop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/perfil_txttop"
                android:layout_width="209dp"
                android:layout_height="133dp"
                android:background="#00FFFFFF"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>