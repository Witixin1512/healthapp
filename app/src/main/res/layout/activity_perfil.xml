<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download"
    android:theme="@style/ThemeOverlay.MyApplication.FullscreenContainer"
    tools:context=".Perfil">


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/Menuperfil"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/menuprofile_background"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/Text_extra"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/perfilcustom_buton01"
                android:text="DETALLS AVANÃ‡ATS"
                android:textAlignment="center"
                android:textColor="#FF14E8F5"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/Horitzontal1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#00FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="110dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/menuperfil_bocs"
                    android:text="date"
                    android:textAlignment="center"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="110dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/menuperfil_bocs"
                    android:text="TextView"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/classamount"
                    android:layout_width="100dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/menuperfil_bocs"
                    android:text="TextView"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Horitzontal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:background="#00FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Extra01"
                    android:layout_width="110dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/menuperfil_bocs"
                    android:text="Extra01"
                    android:textAlignment="center"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/Extra02"
                    android:layout_width="110dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/menuperfil_bocs"
                    android:text="Extra02"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/Extra03"
                    android:layout_width="100dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/menuperfil_bocs"
                    android:text="Extra03"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="83dp"
            android:layout_height="238dp"
            android:layout_marginTop="16dp"
            android:background="#00141414"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Ns q fer amb aixo"
            android:textColor="@android:color/black"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.951"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="278dp"
            android:layout_marginTop="110dp"
            android:background="#00FFFFFF"
            android:src="@drawable/menuperfil_mobilcor02"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>