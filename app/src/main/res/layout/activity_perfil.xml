<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download"
    android:theme="@style/ThemeOverlay.MyApplication.FullscreenContainer"
    tools:context=".Perfil">


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Menuperfil"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/menuprofile_background"
            android:orientation="vertical"
            app:layout_constraintDimensionRatio="0.9:1"
            app:layout_constraintTop_toTopOf="@id/guia_topmenu">

            <TextView
                android:id="@+id/Text_extra"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/perfilcustom_buton01"
                android:text="DETALLS AVANÇATS"
                android:textAlignment="center"
                android:textColor="#FF14E8F5"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@id/guia_bottxtmenu"
                app:layout_constraintDimensionRatio="7.4:1"
                app:layout_constraintStart_toStartOf="@id/guia_esquerratxtmenu"
                app:layout_constraintTop_toTopOf="@id/guia_toptxtmenu" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guia_dretatxtmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.91" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guia_esquerratxtmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.09" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guia_toptxtmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.08" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guia_bottxtmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.18" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guia_topfila01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guia_botfila01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guia_topfila02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guia_botfila02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.8" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Horitzontal1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#00FFFFFF"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/guia_botfila01"
                app:layout_constraintTop_toTopOf="@id/guia_topfila01">

                <Button
                    android:id="@+id/perfil_btn01"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="@id/guia_01"
                    app:layout_constraintEnd_toEndOf="@id/guia_02"
                    android:background="@drawable/menuperfil_bocs"
                    android:text="date"
                    android:textAlignment="center"
                    android:textColor="#80000000" />

                <Button
                    android:id="@+id/perfil_btn02"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="@id/guia_03"
                    app:layout_constraintEnd_toEndOf="@id/guia_04"
                    android:background="@drawable/menuperfil_bocs"
                    android:text="time"
                    android:textAlignment="center"
                    android:textColor="#80000000" />

                <Button
                    android:id="@+id/perfil_btn03"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="@id/guia_05"
                    app:layout_constraintEnd_toEndOf="@id/guia_06"
                    android:background="@drawable/menuperfil_bocs"
                    android:text="Class mount"
                    android:textAlignment="center"
                    android:textColor="#80000000" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guia_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guia_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.33" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guia_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.38" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guia_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.66" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guia_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.71" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guia_06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Horitzontal2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/guia_topfila02"
                app:layout_constraintBottom_toBottomOf="@id/guia_botfila02"
                android:background="#00FFFFFF"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/perfil_btn04"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="@id/guia_2.1"
                    app:layout_constraintEnd_toEndOf="@id/guia_2.2"
                    android:background="@drawable/menuperfil_bocs"
                    android:text="Extra"
                    android:textAlignment="center"
                    android:textColor="#80000000" />

                <Button
                    android:id="@+id/perfil_btn05"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="@id/guia_2.3"
                    app:layout_constraintEnd_toEndOf="@id/guia_2.4"
                    android:background="@drawable/menuperfil_bocs"
                    android:text="Extra"
                    android:textAlignment="center"
                    android:textColor="#80000000" />

                <Button
                    android:id="@+id/perfil_btn06"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="@id/guia_2.5"
                    app:layout_constraintEnd_toEndOf="@id/guia_2.6"
                    android:background="@drawable/menuperfil_bocs"
                    android:text="Extra"
                    android:textAlignment="center"
                    android:textColor="#80000000" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guia_2.1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guia_2.2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.33" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guia_2.3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.38" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guia_2.4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.66" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guia_2.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.71" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guia_2.6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--EditText               PER SI ES NECESARI MÉS ENDAVANT
            android:id="@+id/editTextTextPersonName"
            android:layout_width="161dp"
            android:layout_height="44dp"
            android:layout_marginTop="24dp"
            android:background="#00141414"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/black"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" /-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/menuprofile_backgroundtop"
            app:layout_constraintBottom_toBottomOf="@id/guia_botcaixa"
            app:layout_constraintEnd_toEndOf="@id/guia_dretacaixa"
            app:layout_constraintStart_toStartOf="@id/guia_esquerracaixa"
            app:layout_constraintTop_toTopOf="@id/guia_topcaixa">

            <TextView
                android:id="@+id/perfil_txttop"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#00FFFFFF"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@id/guia_bottxtview"
                app:layout_constraintDimensionRatio="2:1.2"
                app:layout_constraintEnd_toEndOf="@id/guia_dretatxtview"
                app:layout_constraintStart_toStartOf="@id/guia_esquerratxtview"
                app:layout_constraintTop_toTopOf="@id/guia_toptxtview" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guia_bottxtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.8" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guia_toptxtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guia_esquerratxtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.15" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guia_dretatxtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.85" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guia_topcaixa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guia_botcaixa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.36" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guia_esquerracaixa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.17" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guia_dretacaixa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.83" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guia_topmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>